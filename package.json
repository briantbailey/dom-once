{
  "name": "@briantbailey/dom-once",
  "version": "0.4.0",
  "description": "Simple utilities to select and manipulate DOM elements only once.",
  "keywords": [
    "dom",
    "once",
    "initialization",
    "idempotent",
    "browser",
    "utility",
    "data-attribute",
    "spa",
    "dynamic-content",
    "partial-render",
    "re-render",
    "progressive-enhancement"
  ],
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/briantbailey/dom-once#readme",
  "bugs": {
    "url": "https://github.com/briantbailey/dom-once/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/briantbailey/dom-once.git"
  },
  "author": "Brian T. Bailey",
  "engines": {
    "node": ">=18.12.0",
    "pnpm": ">=9.0.0"
  },
  "sideEffects": [
    "./dist/dom-once.iife.min.js"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/dom-once.js",
  "module": "./dist/dom-once.js",
  "types": "./dist/dom-once.d.ts",
  "exports": {
    ".": {
      "types": "./dist/dom-once.d.ts",
      "import": "./dist/dom-once.js",
      "default": "./dist/dom-once.js"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "check": "eslint && tsc --noEmit && vitest run",
    "prebuild": "node ./scripts/generate-version.js && eslint && tsc --noEmit && vitest run",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "test:ci": "vitest run",
    "lint": "eslint",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "release:script": "pnpm run build && pnpm run changelog",
    "release": "bumpp --all --execute \"pnpm run release:script\"",
    "prepublishOnly": "pnpm run build",
    "publish:npmjs": "pnpm publish",
    "publish:jsr": "pnpx jsr publish",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 1"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^22.18.12",
    "@vitest/coverage-v8": "3.2.4",
    "bumpp": "^10.3.1",
    "conventional-changelog": "^7.1.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "happy-dom": "^19.0.2",
    "jiti": "^2.6.1",
    "tsdown": "^0.11.13",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}
